<header id="header" class="text-xl py-6 px-2">
    <div class="container mx-auto flex flex-row justify-between gap-2">
        <div>
            <a class="img-text" href="/">
                <img src="/assets/images/stardrop_small.png" width="36px" />
                <span class="ml-2 text-prose font-bold">{{ site.title }}</span>
            </a>
        </div>
        <div class="menu">
            <input type="checkbox" id="hamburger" />
            <div class="flex justify-end sm:min-w-[180px]">
                <label for="hamburger" class="cursor-pointer">
                    <svg viewBox="0 0 100 80" width="32" height="32">
                        <g class="fill-prose">
                            <rect width="100" height="20" rx="10"></rect>
                            <rect y="30" width="100" height="20" rx="10"></rect>
                            <rect y="60" width="100" height="20" rx="10"></rect>
                        </g>
                    </svg>
                </label>
            </div>
            <nav class="menu-content bg-stardrop-light">
                {%- for bibble in collections.bibbles -%}
                <a
                    href="{{bibble.url}}"
                    class="img-text hover:bg-stardrop-accent"
                >
                    <img src="{{ bibble.data.icon }}" width="24px" />
                    <span class="ml-2"> {{ bibble.data.title }} </span>
                </a>
                {%- endfor -%}
            </nav>
        </div>
    </div>
</header>
