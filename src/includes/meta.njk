{# We use eleventy-rss plugin absoluteUrl filter as helper for absolute URL generation #}

{# General #}
<meta name="description" content="{{ site.description }}">
<meta name="generator" content="{{ eleventy.generator }}">

{# Open Graph #}
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ site.title }}">
<meta property="og:description" content="{{ site.description }}">
<meta property="og:url" content="{{ page.url | url | absoluteUrl(site.baseUrl) }}">
<meta property="og:locale" content="{{  meta.locale or site.locale }}">
{# End Open Graph #}
